<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="init" default-destroy-method="destroy">


	<bean id="person" class="com.tomaszgasior.spring.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="getInstance">
		<constructor-arg value="776" name="id"></constructor-arg>
		<constructor-arg value="Mary" name="name"></constructor-arg>
		<property name="taxId">
			<value>321</value>
		</property>
		<property name="adress" ref="adress"></property>
	</bean>
	
	<bean id="person2" class="com.tomaszgasior.spring.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="createPerson" factory-bean="personfactory">
		<constructor-arg value="565" name="id"></constructor-arg>
		<constructor-arg value="Mike" name="name"></constructor-arg>
		<property name="taxId">
			<value>321</value>
		</property>
		<property name="adress" ref="adress"></property>
	</bean>

	<bean id="adress" class="com.tomaszgasior.spring.Adress">
		<constructor-arg name="street" value="1 Church Lane"></constructor-arg>
		<constructor-arg name="postcode" value="9876"></constructor-arg>
	</bean>
	<bean id="personfactory"
		class="com.tomaszgasior.spring.PersonFactory">
	</bean>
</beans>
